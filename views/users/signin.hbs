<div class="row" >
   <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1 class="h4" style="font-family:Sofia">
          Account Login
        </h1>
      </div> 
      <img src="/img/logooven.png" alt="logo's broken link" class="rounded-circle mx-auto d-block logo m-2" style="width: 120px;height:120px"  >
        <!--class="rounded-circle mx-auto d-block logo m-4" style="width: 75px;height:75px" -->
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email (user account)" value="{{email}}" autofocus>
            </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
          </div>
          <button class="btn btn-primary btn-block" style="background:goldenrod">
            Signin 
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

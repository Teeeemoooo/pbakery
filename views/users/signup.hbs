 <div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header mx-auto" style="font-family:Sofia; font-size:large" >
       <img src="/img/pie.jpg" alt="logo's broken link" class="mx-auto d-block logo m-1" style="width: 30px;height:20px"  >
        Mayfield Bakery <br>       
        New Usser Account  <img src="/img/croissant.jpg" alt="logo's broken link" class="mx-auto d-block logo m-1" style="width: 25px;height:25px"  > 
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" name="name" placeholder="UserName" value="{{name}}" autofocus>
            </div>
            <div class="form-group">
              <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" value="{{confirm_password}}">
            </div >
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block" style="background:goldenrod" >
              Register 
              </button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3 style="font-family:Sofia; text-align:center">New Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <div class="form-group">
          <input maxlength="20 " type="text" name="title" class="form-control" placeholder="Subject" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" placeholder="Detail"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit" style="background:goldenrod">
            Send
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

